{% extends 'base.twig' %}

{% block title_tag %}
    {{ parent() }} Menu
{% endblock %}

{% block content %}
    <div class="holder">
        <h1 class="title">Register</h1>
        <form action="" method="post" class="black-80">
            <div class="measure">
                <label for="username" class="f6 b db mb2">Username</label>
                <input name="username"
                       id="username"
                       value="{{ form.username[0] }}"
                       class="input-reset ba pv2 mb2 db w-100 {{ error.username ? 'b--red' : 'b--black-40' }}"
                >
                {% for message in error.username %}
                    <small id="name-desc" class="f6 red db mb2">{{ message }}</small>
                {% endfor %}
            </div>
            <div class="measure">
                <label for="email" class="f6 b db mb2">Email</label>
                <input name="email"
                       id="email"
                       value="{{ form.email[0] }}"
                       class="input-reset ba pv2 mb2 db w-100 {{ error.email ? 'b--red' : 'b--black-40' }}"
                >
                {% for message in error.email %}
                    <small id="name-desc" class="f6 red db mb2">{{ message }}</small>
                {% endfor %}
            </div>
            <div class="measure">
                <label for="password" class="f6 b db mb2">Password</label>
                <input type="password"
                       name="password"
                       id="password"
                       class="input-reset ba pv2 mb2 db w-100 {{ error.password ? 'b--red' : 'b--black-40' }}"
                >
                {% for message in error.password %}
                    <small id="name-desc" class="f6 red db mb2">{{ message }}</small>
                {% endfor %}
            </div>
            <div class="measure">
                <label for="password-confirm" class="f6 b db mb2">Password Confirm</label>
                <input type="password"
                       name="password-confirm"
                       id="password-confirm"
                       class="input-reset ba pv2 mb2 db w-100 {{ error.password_confirm ? 'b--red' : 'b--black-40' }}"
                >
                {% for message in error.password_confirm %}
                    <small id="name-desc" class="f6 red db mb2">{{ message }}</small>
                {% endfor %}
            </div>
            <input type="submit"
                   name="submit"
                   value="Sign Up"
                   class="input-reset b ph3 pv2 mt3 ba b--black-40 hover-red bg-transparent pointer f6 dib"
            >
        </form>
    </div>
{% endblock %}
